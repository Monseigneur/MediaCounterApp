<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.MediaCounterActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MediaCounterAddActivity"
            android:parentActivityName=".activity.MediaCounterActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".activity.MediaInfoActivity"
            android:parentActivityName=".activity.MediaCounterActivity" />
        <activity
            android:name=".activity.MediaStatsActivity"
            android:parentActivityName=".activity.MediaCounterActivity" />
    </application>

</manifest>