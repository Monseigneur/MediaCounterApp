<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="MediaStatus.Dropped" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/red_700</item>
    </style>

    <style name="MediaStatus.Ongoing" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/yellow_700</item>
    </style>

    <style name="MediaStatus.Complete" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/green_700</item>
    </style>

    <style name="MediaStatus.Default" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>
